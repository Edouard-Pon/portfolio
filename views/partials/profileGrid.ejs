<section class="profile-grid">
    <h1><%= profile.firstName %> <%= profile.lastName %></h1>
    <div class="profile-details-grid">
        <% if (profile.age != null && profile.age !== '') { %>
            <div><%= profile.age %></div>
        <% } %>
        <% if (profile.description != null && profile.description !== '') { %>
            <p><%= profile.description %></p>
        <% } %>
    </div>
</section>
